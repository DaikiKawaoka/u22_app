  <header class="header">
    <i class="fab fa-cuttlefish fa-3x title"></i>

      <!--検索欄-->
      <form method="get" action="/kensaku" class="search_container">
        <input type="search" size="40" placeholder="ユーザー検索" name=<%=:user_name %>>
      </form>

      <%= link_to root_path,{class: "home-link"} do %>
        <i class="fas fa-home fa-lg fa-home"title="ホーム"></i>
      <% end %>

      <% if logged_in? %>
        <i class="fas fa-heart fa-lg fa-heart"title="いいね"></i>
        <i class="fas fa-comment-dots fa-lg fa-comment"title="メッセージ"></i>
        <%= link_to current_user do%>
          <span class="mini-icon-image">
            <% if @current_user.image.attached? %>
              <%= image_tag @current_user.display_image2 if @current_user.image.attached? %>
            <% end %>
          </span>
        <%end%>
      <% else %>
        <i class="login" id="login-show">ログイン</i>
      <% end %>

  </header>