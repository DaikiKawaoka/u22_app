<% unless current_user?(@user) %>
  <div id="follow_form" class="profile_button">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>
