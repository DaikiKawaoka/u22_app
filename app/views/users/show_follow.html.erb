<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><b>物数:</b> <%= @user.things.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%=image_show(user)%>
            <%= link_to user.name, user %><br>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>