<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.user_name %></h1>
      <span><b>物数:</b> <%= @user.things.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to  user do %>
             <span class="mini-icon-image"> <%=image_show(user)%> </span>
             <span class="mini-icon-image"> <%= user.user_name %> </span>
            <% end %>
            <br><br><br>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>