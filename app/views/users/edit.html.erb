<h1>プロフィール編集ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :user_image ,"プロフィール画像"%>
      <%= f.file_field :image,class: 'form-control'%>

      <%= f.label :name ,"名前"%>
      <%= f.text_field :name, class: 'form-control'%>

      <%= f.label :user_name ,"ユーザネーム"%>
      <%= f.text_field :user_name, class: 'form-control'  %>

      <%= f.label :email ,"メールアドレス"%>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :sex ,"性別"%>
      <%= f.select :sex,[['男', 1], ['女', 2],['その他',3]],{ include_blank: false, selected: 1 }, { id: "user_id", class: "user_class" 'form-control'}%>

      <%= f.label :user_comment , "自己紹介"%>
      <%= f.text_area :user_comment,class: "form-control"%>

      <%= f.label :user_notification, class:"checkbox inline" do %>
        <%= f.check_box :user_notification %>
        <span>通知をオンにする</span>
      <% end %>

      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>