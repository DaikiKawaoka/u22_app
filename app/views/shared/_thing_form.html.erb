<%= form_with(model: @thing, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :thing_image,"画像"%>
    <%= f.file_field :thingImage%>

    <%= f.label :thing_name,"物品名" %>
    <%= f.text_field :thing_name %>

    <%= f.label :thing_comment,"コメント" %>
    <%= f.text_field :thing_comment %>

    <%= f.label :thing_assessment,"評価" %>
    <%= f.select :thing_assessment,[[0,"0"],[0.5,"0-5"],[1,"1"],[1.5,"1-5"],[2,"2"],[2.5,"2-5"],[3,"3"],[3.5,"3-5"],[4,"4"],[4.5,"4-5"],[5,"5"]] %>

    <%= f.label :thing_type ,"タイプ"%>
    <%= f.select :thing_type,[['ファッション', 1], ['書籍', 2],['ゲーム',3], ['コスメ', 4],['家電',5], ['食料品', 6],['音楽',7],
     ['日用品', 8],['薬',9], ['文房具', 10],['スポーツ＆アウトドア',11], ['車、バイク', 12],['ベビー、おもちゃ',13], ['家具', 14],['パソコン、オフィス用品',15],['その他',16]], { id: "user_id", class: "user_class" 'form-control'}%>

    <%= f.label :thing_price,"価格"%>
    <%= f.number_field :thing_price,placeholder:"例　1000 (円)",min: 0,step:1000 %>

    <%= f.label :purchase_date,"購入日"%>
    <%= f.date_field :purchase_date %>

    <%= f.label :thing_purchase_place,"購入場所"%>
    <%= f.text_field :thing_purchase_place %>

    <%= f.label :thing_shear,"友達に共有する" %>
    <%= f.check_box :thing_shear ,{},checked_value = "true", unchecked_value = "false"%>

  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>